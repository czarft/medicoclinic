<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.medicalsoft.medico"
	version 	= "1.3.0">
    
	<name>Medico Clinic: Getting Started</name>
    
	<description>
		ClinicalSystem Free Trail.
	</description>
    
	<author href="http://www.medicoclinic.com"
		email="support@medicoclinic">
		Dr. Komkich Suwannagoot
	</author>
    
    
    <preference name="phonegap-version" value="2.0.0" />
	<icon src="icon.png" gap:role="default" />
	<gap:splash src="splash/ios/Default-Landscape~ipad.png" width="1024" height="768" />
	<gap:splash src="splash/ios/Default-Portrait~ipad.png" width="768" height="1024" />
    
	<feature name="http://api.phonegap.com/1.0/media"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="http://api.phonegap.com/1.0/file"/>
	<feature name="http://api.phonegap.com/1.0/camera"/>
    
	<preference name="orientation" value="default" />
	<preference name="webviewbounce" value="false" />
	<preference name="show-splash-screen-spinner" value="false" />
	
	
	<access origin="http://www.medico.in.th" />
</widget>